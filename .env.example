# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/base_nft_app

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Base RPC
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan
BASESCAN_API_KEY=

# WalletConnect
NEXT_PUBLIC_WC_PROJECT_ID=

# Deployer (for Foundry scripts - NEVER commit the actual key)
DEPLOYER_PRIVATE_KEY=

# Farcaster Quick Auth (domain must match your deployment URL)
NEXT_PUBLIC_APP_DOMAIN=localhost

# Farcaster Account Association (generate via Warpcast Manifest Tool after deployment)
FC_ACCOUNT_ASSOCIATION_HEADER=
FC_ACCOUNT_ASSOCIATION_PAYLOAD=
FC_ACCOUNT_ASSOCIATION_SIGNATURE=

# Dev Auth Bypass (set to "true" ONLY in local development)
ALLOW_DEV_AUTH=true

# Contract Addresses
NEXT_PUBLIC_FACTORY_ADDRESS=
NEXT_PUBLIC_DEPLOYER_ADDRESS=

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
